@model IEnumerable<MVC_CRUD.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "All Users";
}

<h2>Registered Users</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserId</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>MiddleInitial</th>
            <th>Age</th>
            <th>Address</th>
            <th>ContactNo</th>
            <th>EmailAddress</th>
            <th>NickName</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.MiddleInitial</td>
                <td>@user.Age</td>
                <td>@user.Address</td>
                <td>@user.ContactNo</td>
                <td>@user.EmailAddress</td>
                <td>@user.NickName</td>
                <td><a asp-action="edit" asp-route-id="@user.UserId" class="text-info">Edit</a></td>
                <td><a asp-action="delete" asp-route-id="@user.UserId" class="text-danger">Delete</a></td>
            </tr>
        }
    </tbody>

</table>
