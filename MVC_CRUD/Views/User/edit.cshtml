@model MVC_CRUD.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Update User";
}


<h2>Update Form</h2>

<form asp-action="edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label class="form-label">FirstName</label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-dange" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label class="form-label">LastName</label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-dange" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label class="form-label">MiddleInitial</label>
        <input class="form-control" asp-for="MiddleInitial" />
        <span class="text-dange" asp-validation-for="MiddleInitial"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Age</label>
        <input class="form-control" asp-for="Age" />
        <span class="text-dange" asp-validation-for="Age"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Address</label>
        <input class="form-control" asp-for="Address" />
        <span class="text-dange" asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label class="form-label">ContactNo</label>
        <input class="form-control" asp-for="ContactNo" />
        <span class="text-dange" asp-validation-for="ContactNo"></span>
    </div>

    <div class="form-group">
        <label class="form-label">EmailAddress</label>
        <input class="form-control" asp-for="EmailAddress" />
        <span class="text-dange" asp-validation-for="EmailAddress"></span>
    </div>

    <div class="form-group">
        <label class="form-label">NickName</label>
        <input class="form-control" asp-for="NickName" />
        <span class="text-danger" asp-validation-for="NickName"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
